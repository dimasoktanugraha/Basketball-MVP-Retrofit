<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:elevation="5dp"
        android:layout_margin="5dp">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="nama game"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:gravity="center"
                android:id="@+id/gameDate"
                android:layout_marginBottom="15dp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vs"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:textAllCaps="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/gameDate"
                android:id="@+id/vs"
                android:layout_marginBottom="5dp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vs"
                android:textSize="18sp"
                android:textAllCaps="true"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:textColor="@color/colorAccent"
                android:layout_below="@id/gameDate"
                android:id="@+id/gameHomeScore"
                android:layout_toStartOf="@id/vs"
                android:layout_marginBottom="5dp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vs"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:textAllCaps="true"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:layout_below="@id/gameDate"
                android:layout_toEndOf="@id/vs"
                android:id="@+id/gameAwayScore"
                android:layout_marginBottom="5dp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vs"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:textColor="@android:color/black"
                android:layout_below="@id/gameDate"
                android:id="@+id/gameAway"
                android:layout_toEndOf="@id/gameAwayScore"
                android:layout_marginBottom="5dp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vs"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:gravity="center"
                android:layout_marginEnd="20dp"
                android:textColor="@android:color/black"
                android:layout_below="@id/gameDate"
                android:id="@+id/gameHome"
                android:layout_toStartOf="@id/gameHomeScore"
                android:layout_marginBottom="5dp"
        />

    </RelativeLayout>

</android.support.v7.widget.CardView>